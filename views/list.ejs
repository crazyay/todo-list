
<%- include('header'); -%>
   <div class="box" id="heading">
    <h1 ><%=listTitle%></h1>
   </div>
       
<div class="box">
        <%for(let i=0;i<newitems.length; i++){%>
         <form action="/delete" method="post">
            <div class="item"> 
                <input type="checkbox" name="checkbox"  value="<%=newitems[i]._id%>"  onchange="this.form.submit()">
                
                <p><%=newitems[i].item %></p>
              <input type="hidden" name="listname" value="<%=listTitle%>">
            </div> 
        </form>
        <%}%>
    <form class="item" action="/" method="post">
        <input type="text" name="list" placeholder="New item" autocomplete="off">
        <button type="submit" name="button" value=<%=listTitle%>>+</button> 
    </form>
    <h4 class="discl"> <%=notstring%> </h4>
</div>
<%- include('footer'); -%>     
